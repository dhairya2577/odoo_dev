<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
<!--    ACTION FOR MENU -->

    <record id="patient_action_id" model="ir.actions.act_window">
        <field name="name">Patient</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">patient.medical</field>
        <field name="view_mode">tree,form,kanban</field>
        <field name="context">{}</field>
    </record>

<!--    TREE VIEW-->

    <record id="patient_record_tree" model="ir.ui.view">
        <field name="name">patient.record.tree</field>
        <field name="model">patient.medical</field>
        <field name="arch" type="xml">
            <tree>
                <field name="patient_seq" string="Patient Seq"/>
                <field name="patient_name" string="Patient Name"/>
                <field name="patient_address" string="Patient Address"/>
                <field name="patient_age" string="Patient age"/>
                <field name="patient_dob" string="Patient DOB"/>
                <field name="patient_number" string="Patient Number"/>
                <field name="state" string="Status" widget="badge"
                        decoration-success="state=='done'" decoration-info="state=='draft'"
                        decoration-danger="state=='cancel'" decoration-warning="state=='confirm'"/>
            </tree>
        </field>
    </record>


<!--    Form VIEW-->

    <record id="patient_record_form" model="ir.ui.view">
        <field name="name">patient.record.form</field>
        <field name="model">patient.medical</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_confirm" string="Confirm" class="oe_highlight" type="object"
                            attrs="{'invisible': [('state', 'not in', ['draft'])]}"/>
                    <button name="action_cancel" type="object" string="Cancel"
                            attrs="{'invisible': [('state', 'not in', ['draft','confirm','done'])]}"/>
                    <button name="action_done" type="object" string="Done"
                            attrs="{'invisible': [('state', 'not in', ['confirm'])]}"/>
                    <button name="action_draft" type="object" string="reset to draft"
                            attrs="{'invisible': [('state', 'not in', ['cancel'])]}"/>
                    <button name="%(medical_project.create_opd_wizard)d" string="Create OPD"
                            class="oe_highlight" type="action"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,confirm,done"/>
                    <button name="create_user_patient" string="Create User" class="oe_highlight" type="object"/>

                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="total_count" class="oe_stat_button" type="object" icon="fa-pencil-square-o">
                            <div class="o_stat_info">
                                <field name="total_opd" class="o_stat_value"/>
                                <span class="o_stat_text">Total OPD</span>
                            </div>
                        </button>
                    </div>
                    <group>
                        <group>
                            <field name="patient_name" string="Patient Name"/>
                            <field name="patient_address" string="Patient Address"/>
                            <field name="patient_age" string="Patient age"/>
                            <field name="patient_seq" string="Patient seq"/>
                        </group>
                        <group>
                            <field name="patient_dob" string="Patient DOB"/>
                            <field name="patient_number" string="Patient Number"/>
                            <field name="color"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

<!--    KANBAN VIEW-->

    <record id="patient_record_kanban" model="ir.ui.view">
        <field name="name">patient.record.kanban</field>
        <field name="model">patient.medical</field>
        <field name="arch" type="xml">
            <kanban string="Patient Kanban" class="o_res_partner_kanban">
                <field name="color"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="#{kanban_color(record.color.raw_value)} oe_kanban_global_click">
                            <div>
                                <ul style="list-style-type:none">
                                    <li>
                                        <b>Name:</b>
                                        <field name="patient_name" string="Patient Name"/>
                                    </li>
                                    <li>
                                        <b>Age:</b>
                                        <field name="patient_age" string="Patient Age"/>
                                    </li>
                                    <li>
                                        <b>Address:</b>
                                        <field name="patient_address" string="Patient Address"/>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>



    <!--    MENUS-->

    <menuitem id="patient_main_menu"
              name="Medical"/>

    <menuitem id="patient_submenu"
              name="Patient"
              parent="patient_main_menu"/>

    <menuitem id="patient_submenu_root"
              name="Patient Details"
              parent="patient_submenu"
              action="patient_action_id"/>
</odoo>


















