<?xml version="1.0" encoding="utf-8"?>
<odoo>
     <record id="module_category_hospital" model="ir.module.category">
        <field name="name">Clinic Management</field>
        <field name="description">Category For Clinic</field>
    </record>

    <record id="group_clinic_doctor" model="res.groups">
        <field name="name">Doctor</field>
        <field name="category_id" ref="module_category_hospital"/>
    </record>

    <record id="group_clinic_manager" model="res.groups">
        <field name="name">Manager</field>
        <field name="category_id" ref="module_category_hospital"/>
    </record>

    <record id="group_clinic_patient" model="res.groups">
        <field name="name">Patient</field>
        <field name="category_id" ref="module_category_hospital"/>
    </record>

    <record id="doctor_record_rule" model="ir.rule">
        <field name="name">See only His Patient</field>
        <field ref="model_doctor_medical" name="model_id"/>
        <field name="domain_force">[('doctor_user_id','=',user.id)]</field>
        <field name="groups" eval="[(4, ref('group_clinic_doctor'))]"/>
    </record>

    <record id="doctor_opd_record_rule" model="ir.rule">
        <field name="name">See only His Patient</field>
        <field ref="model_opd_medical" name="model_id"/>
        <field name="domain_force">[('doctor_id.doctor_user_id','=',user.id)]</field>
        <field name="groups" eval="[(4, ref('group_clinic_doctor'))]"/>
    </record>



    <record id="patient_record_rule" model="ir.rule">
        <field name="name">See only Patient Profile</field>
        <field ref="model_patient_medical" name="model_id"/>
        <field name="domain_force">[('user_id','=',user.id)]</field>
        <field name="groups" eval="[(4, ref('group_clinic_patient'))]"/>
        <field name="perm_unlink" eval="False"/>
        <field name="perm_write" eval="False"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_create" eval="False"/>
    </record>

    <record id="patient_opd_record_rule" model="ir.rule">
        <field name="name">See only Patient Profile</field>
        <field ref="model_opd_medical" name="model_id"/>
        <field name="domain_force">[('patient_id.user_id','=',user.id)]</field>
        <field name="groups" eval="[(4, ref('group_clinic_patient'))]"/>
    </record>

</odoo>